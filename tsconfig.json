{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "baseUrl": "./src",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "paths": {
      "@api/*": ["api/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@shared/*": ["shared/*"],
      "@domain/*": ["core/domain/*"],
      "@middlewares/*": ["api/middlewares/*"],
      "@routes/*": ["api/routes/*"],
      "@logic/*": ["api/logic/*"],
      "@controllers/*": ["api/controllers/*"],
      "@env/*": ["config/env/*"]
    }
  }
}
